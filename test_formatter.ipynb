    "\n",
    "df = pd.DataFrame({\"a\": [1, 1, 2, 2], \"b\": [5, 6, 7, 8]})\n",
    "result = (\n",
    "    df.groupby(\"a\")\n",
    "    .agg(b_sum=(\"b\", \"sum\"))\n",
    "    .reset_index()\n",
    "    .sort_values(\"b_sum\", ascending=False)\n",
    "    .head(2)\n",
    ")\n",
    "result"
   ]
